<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" autocomplete="off">
      </div>
      <button type="submit" class="btn btn-dark btn-lg">Submit</button> 
    </form>


    <form action="/up" method="POST" enctype="multipart/form-data">
      <br><br>
      <div class="form-group">
        <p class="secret-text">Share images, If you want!</p>
      </div>
      <input type="file" id="image" class="btn btn-primary" name="image" value="" required>
      <button type="submit" class="btn btn-danger btn-lg">Upload</button> 
    </form>


  </div>
</div>


<%- include('partials/footer') %>
